<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wavent">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".src.activity.LoginActivity"
            android:label="@string/activity_name_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".src.activity.ListEventActivity"
            android:label="@string/activity_name_list_event"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".src.activity.RegistrationActivity" />
        <activity
            android:name=".src.activity.CreateEventActivity"
            android:label="@string/activity_name_create_event" />
        <activity
            android:name=".src.activity.EventActivity"
            android:label="@string/title_activity_event"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>